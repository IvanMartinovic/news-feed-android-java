<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/kategorijaLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/textKategorija"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:paddingStart="1dp"
        android:paddingLeft="2dp"
        android:paddingEnd="3dp"
        android:paddingRight="4dp"
        android:textAllCaps="true"
        android:textColor="@android:color/background_light"
        app:fontFamily="@font/audiowide"
        app:layout_constraintBottom_toBottomOf="@+id/imageKat"
        app:layout_constraintStart_toEndOf="@+id/imageKat"
        app:layout_constraintTop_toTopOf="@+id/imageKat" />

    <ImageView
        android:id="@+id/imageKat"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>